<% node['network']['interfaces'].each do |iface, interface| %>
<%  next if iface == 'lo' or !interface.key?('addresses') %>
<%  interface['addresses'].each do |addr, address| %>
<%    next if !address.key?('family') or address['family'] != 'inet' %>
<%= addr %>     <%= node['machinename'] %> <%= node['hostname'] %>
<%  end %>
<% end %>
